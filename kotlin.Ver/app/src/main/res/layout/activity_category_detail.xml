<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <com.exercise.ckaiself.kaiyan_kotlinver.view.CategoryHeaderView
    android:id="@+id/category_header"
    android:layout_width="match_parent"
    android:layout_height="290dp"
    android:fitsSystemWindows="true"></com.exercise.ckaiself.kaiyan_kotlinver.view.CategoryHeaderView>

  <android.support.v7.widget.RecyclerView
    android:id="@+id/rv_category_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    app:layout_behavior="com.exercise.ckaiself.kaiyan_kotlinver.view.CategoryDetailBehavior"></android.support.v7.widget.RecyclerView>

</android.support.design.widget.CoordinatorLayout>