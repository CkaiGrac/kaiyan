<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <View
    android:layout_width="wrap_content"
    android:layout_height="1px"
    android:layout_alignParentBottom="true"
    android:background="#55ffffff" />

  <ImageView
    android:id="@+id/iv_avatar"
    android:layout_width="40dp"
    android:layout_height="40dp"
    android:layout_marginLeft="15dp"
    android:layout_marginTop="15dp"
    android:layout_marginRight="13dp"
    android:layout_marginBottom="15dp"
    android:src="@mipmap/pgc_default_avatar" />

  <com.exercise.ckaiself.kaiyan_kotlinver.view.PercentTextView
    android:id="@+id/attention"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:layout_centerVertical="true"
    android:layout_marginLeft="7dp"
    android:layout_marginRight="9dp"
    android:background="@drawable/rect_radius"
    android:padding="5dp"
    android:text="+关注"
    android:textColor="#FFFFFF"
    android:textSize="30px" />

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_toLeftOf="@id/attention"
    android:layout_toRightOf="@id/iv_avatar"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <com.exercise.ckaiself.kaiyan_kotlinver.view.JumpShowTextView
      android:id="@+id/tv_author_name"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content" />

    <com.exercise.ckaiself.kaiyan_kotlinver.view.JumpShowTextView
      android:id="@+id/tv_author_intro"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content" />
  </LinearLayout>

</RelativeLayout>